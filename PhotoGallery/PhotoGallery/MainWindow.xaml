<Window x:Class="PhotoGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Live Photogallery"
        Height="400"
        Width="800"
        MinHeight="300"
        MinWidth="300"
        Icon="./icons/mainicon.ico"
        Style="{StaticResource WindowStyle}"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <StackPanel x:Name="TopMenu" DockPanel.Dock="Top" Height="40" Background="AliceBlue">
            
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="50">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="40">
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom1.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom2.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom3.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom4.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom5.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom6.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom7.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                    <Button Template="{DynamicResource BottomButton}">
                        <Image Source="icons/bottom8.png" Style="{DynamicResource BottomIcons}" />
                    </Button>
                </StackPanel>                    
            </StatusBarItem>                            
        </StatusBar>
        
        <DockPanel>            
        </DockPanel>
    </DockPanel>
</Window>
