<Window x:Class="PhotoGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Live Photogallery"
        Height="400"
        Width="800"
        MinHeight="160"
        MinWidth="260"
        Icon="./mainicon.ico"
        Style="{StaticResource WindowStyle}"
        >
    <DockPanel Grid.Row="0">
        <StackPanel x:Name="TopMenu" DockPanel.Dock="Top" Height="40" Background="AliceBlue">
            
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="50">
            <StatusBarItem>
                <StackPanel Width="auto" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="123"/>
                    <Button Content="123"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
